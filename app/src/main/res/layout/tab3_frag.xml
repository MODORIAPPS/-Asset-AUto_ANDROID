<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:text="@string/tab_3"
                android:textColor="@color/semiBlack"
                android:textSize="@dimen/appBarText"
                android:textStyle="normal" />


            <ImageView
                android:id="@+id/goInfo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/info_icon"
                android:tint="@android:color/black" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 활성화 여부 표시 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/actView_layout"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginTop="@dimen/verticalMargin"
                android:background="@drawable/background_theme_title_act"
                android:padding="@dimen/defaultPadding">

                <TextView
                    android:id="@+id/viewCycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0일 0시 0분"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/actStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:text="@string/tab3_ActStateActivated"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewCycle" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/actSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:theme="@style/SwitchCompatTheme"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/debug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/appSideMargin"
                android:layout_marginTop="@dimen/verticalMargin"
                android:layout_marginBottom="@dimen/verticalMargin"
                android:text="@string/tab3_detailLine1"
                android:textColor="@color/littleBlack"
                android:textSize="@dimen/indicator"
                android:textStyle="normal" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_theme"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/defaultPadding">

                <!-- 순서대로 & 무작위 옵션-->
                <TextView
                    android:id="@+id/detailSet2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab3_ShuffleStateOn"
                    android:textColor="@color/semiBlack"
                    android:textSize="@dimen/titleText"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/detailSet2Con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:text="@string/tab3_t2"
                    android:textColor="@color/littleBlack"
                    android:textSize="@dimen/descText"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailSet2Title" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/shuffleSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="8dp"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:theme="@style/SwitchCompatTheme"
                    app:layout_constraintBottom_toTopOf="@id/middleDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/middleDivider"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:layout_marginTop="@dimen/defaultMargin"
                    android:layout_marginRight="@dimen/defaultMargin"
                    android:layout_marginBottom="@dimen/defaultMargin"
                    android:background="@color/strokeLineColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailSet2Con" />

                <TextView
                    android:id="@+id/detailSet3Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultMargin"
                    android:text="@string/tab3_t3"
                    android:textColor="@color/semiBlack"
                    android:textSize="@dimen/titleText"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/middleDivider" />

                <TextView
                    android:id="@+id/detailSet3Con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:text="최소 15분 이상이여야합니다."
                    android:textColor="@color/littleBlack"
                    android:textSize="@dimen/descText"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailSet3Title" />

                <TextView
                    android:id="@+id/numPickerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:text="n일 : n시간 : n분"
                    android:textColor="@color/semiBlack"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailSet3Con" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/tab3_detailLine2"
                android:textColor="@color/littleBlack"
                android:textSize="@dimen/indicator"
                android:textStyle="normal" />

            <!-- Set Directory -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_theme"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/defaultPadding">

                <TextView
                    android:id="@+id/detailSet4Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="280dp"
                    android:text="@string/tab3_detailSet4Title"
                    android:textColor="@color/semiBlack"
                    android:textSize="@dimen/titleText"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/showGetFromWhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:maxWidth="250dp"
                    android:text="사용자가 지정한 폴더에서 불러오고 있습니다."
                    android:textColor="@color/gray"
                    android:textSize="@dimen/descText"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailSet4Title" />

                <TextView
                    android:id="@+id/showPictGetCnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/showGetFromWhat"
                    android:layout_marginTop="5dp"
                    android:maxWidth="250dp"
                    android:text="확인된 사진 n개"
                    android:textColor="@color/semiBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/showGetFromWhat" />

                <ImageView
                    android:id="@+id/showDirBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/settings_icon"
                    android:tint="#6AAFE6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>