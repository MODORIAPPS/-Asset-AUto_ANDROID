<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:background="@drawable/background_theme"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ContentField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Title_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 태그를 입력받습니다."
                android:textColor="@color/blueEnabled"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>



        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/subTitle_dia"
            android:textColorHint="@color/semiBlack"
            android:text="기존의 House 태그를 변경합니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/warning_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="이미 중복된 태그가 존재합니다."
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <EditText
            android:singleLine="true"
            android:drawableStart="@drawable/edit_icon"
            android:textColor="@color/semiBlack"
            android:textColorHint="@color/semiBlack"
            android:id="@+id/inputText_dia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="새 태그 입력" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/negativeBtn_dia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="취소"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/positiveBtn_dia"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="확인"
            android:textColor="@color/white" />


    </LinearLayout>


</RelativeLayout>