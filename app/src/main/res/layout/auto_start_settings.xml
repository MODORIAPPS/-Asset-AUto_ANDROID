<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동배경화면\n설정하기."
        android:textColor="@color/semiBlack"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxWidth="300dp"
        android:text="새롭게 추가된 기능으로 더 편하게\n자동 배경화면을 설정하세요."
        android:textSize="16dp"
        android:textColor="@color/semiBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:background="@drawable/select_area"
        android:id="@+id/startInit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="15dp">

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/blueEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정 시작 또는 처음 사용" />

        <TextView
            android:textColor="@color/blueEnabled"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="앱을 처음사용하거나 모든 설정을 다시 시작하고 싶을 때 사용합니다." />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_area"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/startInit">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기존 설정 수정"
            android:textColor="@color/blueEnabled"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="앱을 처음사용하거나 모든 설정을 다시 시작하고 싶을 때 사용합니다."
            android:textColor="@color/blueEnabled"
            android:textSize="15dp" />

    </LinearLayout>


    <Button
        android:id="@+id/startDefault"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="설정 시작"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>