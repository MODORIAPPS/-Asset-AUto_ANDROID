<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/toolbar_title"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="@string/tab2_toolbarText"
                    android:textColor="@color/semiBlack"
                    android:textSize="@dimen/appBarText"
                    android:textStyle="normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <ImageView
                    android:id="@+id/goReset"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:rotation="30"
                    android:src="@drawable/loop_icon" />


            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView_frag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner1"
            ads:layout_constraintTop_toBottomOf="@id/toolbar3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/viewTagLists"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/adView_frag1"
            tools:listitem="@layout/taglists_layout">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/inputKeyword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/appSideMargin"
            android:layout_marginTop="@dimen/verticalMargin"
            android:layout_marginEnd="@dimen/appSideMargin"
            android:layout_marginBottom="@dimen/verticalMargin"
            android:background="@drawable/background_theme"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/viewTagLists">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/search_icon"
                android:tint="#636363" />
        </LinearLayout>

        <!-- 상단 그리드 1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/grid1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="@dimen/appSideMargin"
            android:layout_marginTop="@dimen/verticalMargin"
            android:layout_marginEnd="@dimen/appSideMargin"
            app:cardCornerRadius="@dimen/defaultRadius"
            app:layout_constraintTop_toBottomOf="@id/inputKeyword"
            tools:ignore="RtlSymmetry">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tag1Gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gray_shape" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/black_gradient">

                    <TextView
                        android:id="@+id/view_tag1Grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/defaultMargin"
                        android:text=""
                        android:textColor="@color/white" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- 상단 그리드 2-->
        <androidx.cardview.widget.CardView
            android:id="@+id/grid2"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="@dimen/appSideMargin"
            android:layout_marginTop="@dimen/appSideMargin"
            android:layout_marginEnd="@dimen/verticalMargin"
            app:cardCornerRadius="@dimen/defaultRadius"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/grid1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tag2Gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gray_shape" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/black_gradient">

                    <TextView
                        android:id="@+id/view_tag2Grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/defaultMargin"
                        android:text=""
                        android:textColor="@color/white" />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- 상단 그리드 3-->
        <androidx.cardview.widget.CardView
            android:id="@+id/grid3"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_marginStart="@dimen/verticalMargin"
            android:layout_marginTop="@dimen/appSideMargin"
            android:layout_marginEnd="@dimen/appSideMargin"
            app:cardCornerRadius="@dimen/defaultRadius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/grid1"
            tools:ignore="RtlSymmetry">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tag3Gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gray_shape" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/black_gradient">

                    <TextView
                        android:id="@+id/view_tag3Grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/defaultMargin"
                        android:text=""
                        android:textColor="@color/white" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- 상단 그리드 4-->
        <androidx.cardview.widget.CardView
            android:id="@+id/grid4"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_marginStart="@dimen/appSideMargin"
            android:layout_marginTop="@dimen/appSideMargin"
            android:layout_marginEnd="@dimen/verticalMargin"
            android:layout_marginBottom="@dimen/verticalMargin"
            app:cardCornerRadius="@dimen/defaultRadius"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/grid2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tag4Gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gray_shape" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/black_gradient">

                    <TextView
                        android:id="@+id/view_tag4Grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/defaultMargin"
                        android:text=""
                        android:textColor="@color/white" />

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <!-- 상단 그리드 5-->
        <androidx.cardview.widget.CardView
            android:id="@+id/grid5"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="@dimen/verticalMargin"
            android:layout_marginTop="@dimen/appSideMargin"
            android:layout_marginEnd="@dimen/appSideMargin"
            app:cardCornerRadius="@dimen/defaultRadius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/grid3"
            tools:ignore="RtlSymmetry">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tag5Gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gray_shape" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/black_gradient">

                    <TextView
                        android:id="@+id/view_tag5Grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/defaultMargin"
                        android:text=""
                        android:textColor="@color/white" />

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- 그리드 6-->
        <androidx.cardview.widget.CardView
            android:id="@+id/grid6"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="@dimen/appSideMargin"
            android:layout_marginTop="@dimen/appSideMargin"
            android:layout_marginEnd="@dimen/appSideMargin"
            android:layout_marginBottom="@dimen/appSideMargin"
            app:cardCornerRadius="@dimen/defaultRadius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/grid5"
            app:layout_goneMarginTop="@dimen/verticalMargin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tag6Gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gray_shape" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/black_gradient">

                    <TextView
                        android:id="@+id/view_tag6Grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/defaultMargin"
                        android:text=""
                        android:textColor="@color/white" />

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>